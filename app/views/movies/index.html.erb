<div class="container text-center">
  <div class="swiper mySwiper" data-controller="swiper">
    <div class="swiper-wrapper">
      <% @movies.each do |movie| %>
        <div class="swiper-slide">
          <div class="poster-img text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>)">
            <div class="movie-div p-4">
              <h3 class="movie-title"><%= movie.title %></h3>
              <div class="rating">
                <span class="star"><i class="fa-solid fa-star"></i></span>
                <h3 class=""><%= movie.rating %>/10</h3>
              </div>
              <div data-controller="popover" data-bs-toggle="popover" data-bs-trigger="hover" data-bs-placement="right" data-bs-content="<%= movie.year %> <%= movie.rating %> <%=movie.overview %> ">
                <i class="fa-solid fa-circle-info"></i>
              </div>
            </div>
          </div>
          <div class="bg-primary">
            <%= render 'swipes/form', swipe: @swipe, party: @party, movie: movie %>
          </div>
          <div class="movie-detail-div2 p-2 bg-primary">
            <div class="rating">
              <span class="star"><i class="fa-solid fa-star"></i></span>
              <h3 class=""><%= movie.rating %>/10</h3>
            </div>
            <p class="text-white text-start mt-2">YEAR : <%= movie.year %></p>
            <p class="text-white text-start">OVERVIEW : <%= movie.overview %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
