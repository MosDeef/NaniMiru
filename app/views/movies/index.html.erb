<div class="container  text-center">
  <div class="swiper mySwiper" data-controller="swiper">
    <div class="tinder" data-swiper-target= "container">
      <div class="tinder--status">
        <i class="fa fa-remove" data-action="click->swiper#rejected"></i>
        <i class="fa fa-heart" data-action="click->swiper#accepted"></i>
      </div>
      <div class="tinder--cards">
        <% @movies.each do |movie| %>
          <div class="tinder--card" data-swiper-target="card" data-url="<%= party_swipes_path(@party, @swipe) %>" data-movie-id="<%= movie.id %>">
            <%= image_tag movie.poster_url %>
            <div class= "tinder--card-title">
              <h3><%= movie.title %></h3>
              <span class="star"><i class="fa-solid fa-star"></i></span>
              <h3 class=""><%= movie.rating %>/10</h3>
            </div>
            <div class="rating">
            </div>
          </div>
          <div class="d-flex justify-content-around d-none buttons" data-swiper-target="buttons">
            <p class="text-white"><%= movie.title %></p>
            <button class='btn btn-like' data-action="click->swiper#rejected" data-url="<%= party_swipes_path(@party, @swipe) %>" data-movie-id="<%= movie.id %>"><i class="fa-solid fa-x" data-url="<%= party_swipes_path(@party, @swipe) %>" data-movie-id="<%= movie.id %>"></i></button>
            <button class='btn btn-like' data-action="click->swiper#accepted" data-url="<%= party_swipes_path(@party, @swipe) %>" data-movie-id="<%= movie.id %>"><i class="fa-solid fa-heart text-center" data-url="<%= party_swipes_path(@party, @swipe) %>" data-movie-id="<%= movie.id %>"></i></button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
