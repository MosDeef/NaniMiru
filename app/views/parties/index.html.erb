<div class="container text-white mt-2">
  <div class="genre-top">
    <div class="header-top">
      <div class="header-top-pink mt-2">
        <h1>Parties</h1>
      </div>
    </div>
  </div>
  <div class="on-going-parties p-2">
    <% @parties.each do |party| %>
      <div class="notification d-flex gap-3">
        <p><i class="fa-solid fa-ticket"></i></p>
        <div class="notification-content text-white">
          <p><%= link_to party.name, party_path(party) , class: "text-white"  %></p>
          <% party.accepted_movies.each do |movie| %>
            <div class="d-flex gap-3">
              <i class="fa-solid fa-film"></i>
              <p class="text-white"><%= movie.title %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
