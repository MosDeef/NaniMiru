<div class="container text-white mt-2">
  <div class="genre-top">
    <div class="header-top">
      <div class="header-top-pink mt-2">
        <h1>Parties</h1>
      </div>
    </div>
  </div>
  <div class="on-going-parties p-2">
    <% @parties.each do |party| %>
      <div class="notification d-flex gap-3">
        <div><i class="fa-solid fa-ticket"></i></div>
        <div class="notification-content text-white">
          <div><%= link_to party.name, party_path(party) , class: "text-white"  %></div>
          <div class="mt-1 pt-1">
            <% party.accepted_movies.each do |movie| %>
              <div class="d-flex gap-3">
                <i class="fa-solid fa-film"></i>
                <p>
                  <%= movie.title %>
                </p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
